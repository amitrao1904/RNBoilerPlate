{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended", "standard"],
  "env": {
    "jest": true,
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    "flowtype-errors",
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "flowtype-errors/show-errors": 2,
    "react/prop-types": 0
  },
  "globals": {
    "fetch": true
  }
}
